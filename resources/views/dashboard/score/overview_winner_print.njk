{% extends '../../layouts/main' %}

{% set page_title = 'Print' %}

{% block content %}
  <img class="has-contents-below" src="/assets/img/logo-100.png" alt="Logo" />

  <h1 class="title">{{ result.category.name }}</h1>

  {% if result.subcategories.length == 0 %}
    {% set candidate = result.candidates[0] %}

    <div>
      <table class="table is-bordered is-fullwidth">
        <thead>
          <tr>
            <th class="has-text-centered">Number</th>
            <th class="has-text-centered">Contestant</th>
            <th class="has-text-centered">Average</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td class="is-fit has-text-centered">{{ candidate.number }}</td>
            <td class="has-text-centered">{{ candidate.name }}</td>
            <td class="has-text-centered">{{ result.getJudgesAverage(candidate.id) | fixed }}</td>
          </tr>
        </tbody>
      </table>
    </div>
  {% endif %}

  {% for subcategory in result.subcategories %}
    {% set candidate = subcategory.candidates[0] %}

    <hr />

    <h2 class="subtitle">{{ subcategory.name }}</h2>

    <div>
      <table class="table is-bordered is-fullwidth">
        <thead>
          <tr>
            <th class="has-text-centered">Number</th>
            <th class="has-text-centered">Contestant</th>
            <th class="has-text-centered">Average</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td class="is-fit has-text-centered">{{ candidate.number }}</td>
            <td class="has-text-centered">{{ candidate.name }}</td>
            <td class="has-text-centered">{{ result.getJudgesAverage(candidate.id) | fixed }}</td>
          </tr>
        </tbody>
      </table>
    </div>
  {% endfor %}

  <div class="columns">
    {% for judge in result.judges %}
      <div class="column is-4">
        <div class="signature-area">
          <p class="title">{{ judge.name }}</p>
          <p class="subtitle">Judge</p>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="columns">
    <div class="column is-4">
      <div class="signature-area">
        <p class="title">Name Here</p>
        <p class="subtitle">Title Here</p>
      </div>
    </div>
  </div>
{% endblock %}
