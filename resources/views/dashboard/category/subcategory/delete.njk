{% extends '../../../layouts/dashboard' %}

{% set page_title = 'Delete Category' %}
{% set active_menu = 'categories' %}

{% block subcontent %}
  <section class="hero is-danger has-contents-below">
    <div class="hero-body">
      <div class="container is-fluid">
        <div class="level">
          <div class="level-left">
            <div>
              <h1 class="title">{{ category.name }}</h1>
              <h2 class="subtitle">Delete subcategory</h2>
            </div>
          </div>

          <div class="level-right">

          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="main">
    <div class="columns">
      <div class="column is-4 is-offset-4">
        <article class="message is-danger">
          <div class="message-header">
            <p>Delete Subcategory</p>
          </div>

          <div class="message-body">
            <form class="form" action="{{ formUrl }}" method="post">
              {{ csrfField }}

              <div class="has-contents-below">
                <p>Are you sure you want to delete this subcategory from {{ category.name }}?</p>
                <p><strong>{{ model.name }}</strong></p>
              </div>

              <div class="is-clearfix">
                <div class="field is-grouped is-pulled-right">
                  <p class="control">
                    <a href="{{ route('dashboard.categories.sub', { id: category.id }) }}" class="button is-light">
                      <span>Cancel</span>
                    </a>
                  </p>

                  <p class="control">
                    <button class="button is-danger">
                      <span class="icon is-small">
                        <i class="fa fa-times"></i>
                      </span>

                      <span>Delete</span>
                    </button>
                  </p>
                </div>
              </div>
            </form>
          </div>
        </article>
      </div>
    </div>
  </div>
{% endblock %}
