{% extends '../../../layouts/dashboard' %}

{% set page_title = 'Add Stage' %}
{% set active_menu = 'categories' %}

{% set formUrl = url('dashboard.categories.stages.add', { category_id: category.id }) %}

{% if model.id %}
  {% set page_title = 'Edit Stage' %}
    {% set formUrl = url('dashboard.categories.stages.edit', { category_id: category.id, id: model.id }) %}
{% endif %}

{% block subcontent %}
  <section class="hero is-light has-contents-below">
    <div class="hero-body">
      <div class="container is-fluid">
        <div class="level">
          <div class="level-left">
            {% if model.id %}
              <h1 class="title">Edit Stage</h1>
            {% else %}
              <h1 class="title">Add Stage</h1>
            {% endif %}
          </div>

          <div class="level-right">

          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="container is-fluid">
    <div class="columns">
      <div class="column is-4 is-offset-4">
        <div class="box">
          {% if old('errors') %}
            {% for error in old('errors') %}
              <div class="notification is-danger">
                <small>{{ error.message | capitalize }}</small>
              </div>
            {% endfor %}
          {% endif %}

          <form class="form" action="{{ formUrl }}" method="post">
            {{ csrfField }}

            <div class="field">
              <label class="label">Name</label>
              <div class="control">
                <input class="input" type="text" name="name" value="{{ old('name', model.name) }}" required />
              </div>
            </div>

            <div class="field">
              <label class="label">Level</label>
              <div class="control">
                <input class="input" type="number" name="level" value="{{ old('level', model.level) }}" required />
              </div>
            </div>

            <div class="field">
              <p class="control is-clearfix">
                <button class="button is-primary is-pulled-right">
                  <span class="icon is-small">
                    <i class="fa fa-save"></i>
                  </span>

                  <span>Save</span>
                </button>
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
